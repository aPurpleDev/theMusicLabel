        <div class="card rounded">
            <div class="card-header">
                <h2 class="text-success text-center display-6">Connect</h2>
            </div>
            <div class="card-body text-center bg-transparent">
                <h5 class="card-title">Connect to your account and plug into your favorite Artists</h5>
                <p class="card-text">Top prices for Albums and Events</p>
                <a href="{{ path('app_login') }}" class="btn btn-primary align-center">LOGIN</a>
            </div>
        </div>
        </div>

        <div class="jumbotron" style="background-image: url(http://static.hdw.eweb4.com/media/wallpapers_dl/1/140/1394335-abstract-music-art.jpg); background-size: 100%;">
        <div class="card rounded">
            <div class="card-header">
                <h2 class="text-success text-center display-6">Register</h2>
            </div>
            <div class="card-body text-center bg-transparent">
                <h5 class="card-title">Join millions WorldWide in the newest Music Hub</h5>
                <p class="card-text">Partake in the Musical fun</p>
                <a href="{{ path('app_register') }}" class="btn btn-primary align-center">REGISTER</a>
            </div>
        </div>
        </div>
