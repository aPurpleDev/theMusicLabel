{% extends 'base.html.twig' %}

{% block body %}

    <h2 class="bg-success text-center">Welcome to the MusicLabel</h2>
    {% if app.user == false %}
        <div class="card">
            <div class="card-header">
                <h2 class="text-success text-center"</h2>Connect
            </div>
            <div class="card-body text-center">
                <h5 class="card-title">Connect to your account and plug into your favorite Artists</h5>
                <p class="card-text">Top prices for Albums and Events</p>
                <a href="{{ path('app_login') }}" class="btn btn-primary align-center">LOGIN</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h2 class="text-success text-center"</h2>Register
            </div>
            <div class="card-body text-center">
                <h5 class="card-title">Join millions WorldWide in the newest Music Hub</h5>
                <p class="card-text">Partake in the Musical fun</p>
                <a href="{{ path('app_register') }}" class="btn btn-primary align-center">REGISTER</a>
            </div>
        </div>
    {% endif %}

    {% if app.user %}
        <h3 class = "text-success text-center">Greetings {{ app.user.firstname }}</h3>
    {% endif %}

    <div class = "text-left">
    <h4 class = "bg-secondary text-light">Latest News</h4></div>

    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Artist</th>
            <th>Content</th>
        </tr>
        </thead>
        <tbody>
        {% for news in newslisting %}
            <tr>
                <td>{{ news.title }}</td>
                <td>{{ news.publishDate|date('Y-m-d H:i:s')}}</td>
                <td>{{ news.artist }}</td>
                <td>{{ news.content }}</td>
                <td>
                    <a class = "btn-info" href="{{ path('news_show', {'id': news.id}) }}">View</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr class = "bg-secondary">

    <div class = "text-left">
        <h4 class = "bg-secondary text-light">Newest Albums</h4></div>

    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Artist</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        {% for album in albumlisting %}
            <tr>
                <td>{{ album.title }}</td>
                <td>{{ album.releaseDate|date('Y-m-d H:i:s')}}</td>
                <td>{{ album.artist }}</td>
                <td>{{ album.price }} €</td>
                <td>
                    <a class = "btn-info" href="{{ path('news_show', {'id': album.id}) }}">View</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr class = "bg-secondary">

    <div class = "text-left">
    <h4 class = "bg-secondary text-light">Upcoming Events</h4></div>

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Artist</th>
            <th>Start date</th>
            <th>End date</th>
            <th>City</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        {% for event in eventlisting %}
            <tr>
                <td>{{ event.name }}</td>
                <td>{{ event.artist }}</td>
                <td>{{ event.startDate|date('Y-m-d H:i:s')}}</td>
                <td>{{ event.endDate|date('Y-m-d H:i:s')}}</td>
                <td>{{ event.artist }}</td>
                <td>{{ event.price }} €</td>
                <td>
                    <a class = "btn-info" href="{{ path('event_show', {'id': event.id}) }}">View</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr class = "bg-secondary">

{% endblock %}