        <div class = "text-center">
    <h4 class = "bg-info text-light display-6">Latest News</h4></div>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Artist</th>
            <th>Content</th>
        </tr>
        </thead>
        <tbody>
        {% for news in newslisting %}
            <tr>
                <td>{{ news.title }}</td>
                <td>{{ news.publishDate|date('Y-m-d H:i:s')}}</td>
                <td>{{ news.artist }}</td>
                <td>{{ news.content }}</td>
                <td>
                    <a class = "btn btn-info" href="{{ path('news_show', {'id': news.id}) }}">View</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr class = "bg-secondary">

    <div class = "text-center">
        <h4 class = "bg-info text-light display-6">Newest Albums</h4></div>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Artist</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        {% for album in albumlisting %}
            <tr>
                <td>{{ album.title }}</td>
                <td>{{ album.releaseDate|date('Y-m-d H:i:s')}}</td>
                <td>{{ album.artist }}</td>
                <td>{{ album.price }} â‚¬</td>
                <td>
                    <a class = "btn btn-info" href="{{ path('album_show', {'id': album.id}) }}">Show</a>
                    <a type="submit" id="btn-buy" class="btn btn-success" href="{{ path('album_buy', {'id': album.id}) }}">Buy</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr class = "bg-secondary">

    <div class = "text-center">
    <h4 class = "bg-info text-light display-6">Upcoming Events</h4></div>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th>Artist</th>
            <th>Start date</th>
            <th>End date</th>
            <th>City</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        {% for event in eventlisting %}
            <tr>
                <td>{{ event.name }}</td>
                <td>{{ event.artist }}</td>
                <td>{{ event.startDate|date('Y-m-d H:i:s')}}</td>
                <td>{{ event.endDate|date('Y-m-d H:i:s')}}</td>
                <td>{{ event.artist }}</td>
                <td>{{ event.price }} â‚¬</td>
                <td>
                    <a class = "btn btn-info" href="{{ path('event_show', {'id': event.id}) }}">View</a>
                    <a type="submit" id="btn-buy" class="btn btn-success" href="{{ path('event_buy', {'id': event.id}) }}">Buy</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr class = "bg-secondary">

{% endblock %}